PATH_add bin

export EXPO_ROOT_DIR=`pwd`

# ANDROID_HOME should be replaced with ANDROID_SDK_ROOT as soon as RN stops using it for its buildscripts
export ANDROID_HOME="${ANDROID_SDK_ROOT:=$ANDROID_SDK}"

# Force all Expo modules to be compiled from source
export EXPO_USE_SOURCE=1

source_local() {
  file=./.envrc.local
  if [[ -f "$file" ]]; then
    source_env "$file"
  fi
  watch_file "$file"
}

# Load environment variables from Google Cloud Secret Manager
load_gcp_secrets() {
  SECRET_NAME="${EXPO_EXPOTOOLS_SECRET_NAME:-expo-expotools-env}"
  if command -v gcloud >/dev/null 2>&1; then
    if secrets=$(gcloud secrets versions access latest --secret "$SECRET_NAME" 2>/dev/null); then
      eval "export $(echo "$secrets" | jq -r 'to_entries | map("\(.key)=\(.value)") | @sh')" 2>/dev/null || {
        echo "Warning: Failed to parse GCP secrets JSON"
      }
    else
      echo "Warning: Failed to access GCP secret '$SECRET_NAME'"
    fi
  else
    echo "Warning: gcloud command not found, skipping GCP secrets"
  fi
}

install_git_hooks() {
  for path in scripts/git-hooks/*; do
    filename=$(basename $path)
    ln -sf "../../scripts/git-hooks/$filename" ".git/hooks/$filename"
  done
}

use_ruby() {
  local required_version=$1

  if ! ruby -v | grep -q "ruby $required_version"; then
    log_error "Ruby $required_version is required. Please install it using your Ruby version manager like rbenv or rvm."
    exit 1
  fi

  layout ruby
}

load_gcp_secrets
source_local
install_git_hooks
use_ruby "3.3"
